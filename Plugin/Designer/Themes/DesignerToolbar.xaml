<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:designer="clr-namespace:Designer.DesignerTools">
    <Style TargetType="{x:Type designer:DesignerToolbar}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type designer:DesignerToolbar}">
                    <ToolBarTray Orientation="{Binding Path=Orientation, RelativeSource={RelativeSource TemplatedParent}}">
                        <ToolBar ItemsSource="{Binding Path=Tools, RelativeSource={RelativeSource TemplatedParent}}">
                            <ToolBar.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton GroupName="Common" Width="30" Height="30" IsChecked="{Binding Path=IsSelected, Mode=OneWayToSource}">
                                        <RadioButton.Template>
                                            <ControlTemplate>
                                                <ToggleButton IsChecked="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                                              Background="Transparent" BorderThickness="0">
                                                    <Image Source="{Binding Path=Image}" Width="24" Height="24" Margin="2"></Image>
                                                </ToggleButton>
                                            </ControlTemplate>
                                        </RadioButton.Template>
                                        
                                    </RadioButton>
                                </DataTemplate>
                            </ToolBar.ItemTemplate>
                        </ToolBar>
                    </ToolBarTray>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>