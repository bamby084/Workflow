<Window x:Class="TestHarness.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestHarness"
        xmlns:designer="clr-namespace:Designer;assembly=Designer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <Style TargetType="{x:Type designer:FlowTableCell}">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <DrawingBrush Viewport="0,0,4,4" ViewportUnits="Absolute" TileMode="Tile">
                        <DrawingBrush.Drawing>
                            <DrawingGroup>
                                <GeometryDrawing Brush="Black">
                                    <GeometryDrawing.Geometry>
                                        <GeometryGroup>
                                            <RectangleGeometry Rect="0,0,50,50" />
                                            <RectangleGeometry Rect="50,50,50,50" />
                                        </GeometryGroup>
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                            </DrawingGroup>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{x:Static SystemColors.GradientInactiveCaptionBrush}"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ToolBar>
            <Button Content="Select" Click="SelectionToolClicked"/>
            <Button Content="Block" Click="BlockToolClicked"/>
        </ToolBar>

        <designer:DesignerCanvas Background="White" Grid.Row="1" x:Name="Canvas">
            <Border BorderThickness="1" BorderBrush="Green"  Background="Wheat"
                    designer:DesignerCanvas.IsSelectable="True"
                    Canvas.Left="100" Canvas.Top="100" Width="100" Height="80"></Border>
            <Border BorderThickness="1" BorderBrush="Green" Background="White"
                    designer:DesignerCanvas.IsSelectable="True"
                    Canvas.Left="300" Canvas.Top="50" Width="100" Height="80"></Border>
            <Border BorderThickness="1" BorderBrush="Green" Background="Yellow"
                    designer:DesignerCanvas.IsSelectable="True"
                    Canvas.Left="300" Canvas.Top="150" Width="100" Height="80"></Border>
        </designer:DesignerCanvas>
    </Grid>
</Window>
