<UserControl
    x:Class="JdSuite.Common.TreeListView.TreeGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JdSuite.Common.TreeListView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="treeGridCtrl"
    d:DesignHeight="450"
    d:DesignWidth="800"
    SizeChanged="TreeGridCtrl_SizeChanged"
    mc:Ignorable="d">
    <Grid x:Name="rootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" ScrollViewer.VerticalScrollBarVisibility="Auto" />
            <RowDefinition
                Height="5"
                MinHeight="5"
                MaxHeight="5" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="col1" MinWidth="200" />
            <ColumnDefinition
                x:Name="col2"
                MinWidth="40"
                MaxWidth="100"
                SharedSizeGroup="col2group" />
            <ColumnDefinition
                x:Name="col3"
                MinWidth="60"
                SharedSizeGroup="col3group" />
        </Grid.ColumnDefinitions>
        <!--<Line
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            VerticalAlignment="Top"
            Stroke="Red"
            StrokeThickness="0.5"
            Stretch="Uniform"
            X1="0"
            X2="2"
            Y1="0"
            Y2="0" />-->
        <Border
            x:Name="headerRowBorder"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Height="18"
            VerticalAlignment="Top"
            BorderBrush="Red"
            BorderThickness="0" />
        <TextBlock
            x:Name="textBlockName"
            Grid.Row="0"
            Grid.Column="0"
            FontWeight="Bold"
            Text="     Name" />
        <TextBlock
            x:Name="textBlockType"
            Grid.Row="0"
            Grid.Column="1"
            FontWeight="Bold"
            Text="    Type" />
        <TextBlock
            x:Name="textBlockValue"
            Grid.Row="0"
            Grid.Column="2"
            FontWeight="Bold"
            Text="  Value" />
        <ScrollViewer
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            VerticalScrollBarVisibility="Auto">
            <local:TreeNodeX
                x:Name="rootNode"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="3" />
        </ScrollViewer>

    </Grid>
</UserControl>
