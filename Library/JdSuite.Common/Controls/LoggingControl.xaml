<UserControl
    x:Class="JdSuite.Common.Controls.LoggingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JdSuite.Common.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="200"
    d:DesignWidth="500"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">

    <Grid x:Name="gridContainer" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Padding="5,0,0,0"
            Background="LightBlue">
            Log
        </TextBlock>

        <DataGrid
            Name="dataGrid"
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Stretch"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            ColumnWidth="*"
            GridLinesVisibility="All"
            RowHeaderWidth="20">

            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Gray" />

                <Style x:Key="gridHeaderStyle" TargetType="DataGridColumnHeader">

                    <Setter Property="FontFamily" Value="Verdana" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="5,1" />
                    <Setter Property="FontWeight" Value="Normal" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="SeparatorBrush" Value="Black" />

                </Style>
                <Style x:Key="cellStyle" TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Center" />
                    <Setter Property="Padding" Value="5,1" />
                </Style>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Level}" Value="Warn">
                            <Setter Property="Foreground" Value="Blue" />
                        </DataTrigger>

                        <DataTrigger Binding="{Binding Level}" Value="Error">
                            <Setter Property="Foreground" Value="Red" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>

            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn
                    MinWidth="60"
                    MaxWidth="120"
                    Binding="{Binding Path=Time, Mode=OneWay}"
                    Header="Time"
                    HeaderStyle="{StaticResource gridHeaderStyle}"
                    IsReadOnly="True" />

                <DataGridTextColumn
                    MinWidth="50"
                    MaxWidth="80"
                    Binding="{Binding Path=Level, Mode=OneWay}"
                    Header="Severity"
                    HeaderStyle="{StaticResource gridHeaderStyle}"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Path=FormattedMessage, Mode=OneWay}"
                    Header="Error Description"
                    HeaderStyle="{StaticResource gridHeaderStyle}"
                    IsReadOnly="True" />

                <DataGridTextColumn
                    MinWidth="30"
                    MaxWidth="120"
                    Binding="{Binding Path=LoggerName, Mode=OneWay}"
                    Header="Code"
                    HeaderStyle="{StaticResource gridHeaderStyle}"
                    IsReadOnly="True" />
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</UserControl>
